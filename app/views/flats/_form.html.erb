<%= form_for @flat do |f| %>
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :address, class: "form-label mt-2" %>
  <%= f.text_field :address, class: "form-control" %>
  <%= f.label :description, class: "form-label mt-2" %>
  <%= f.text_area :description, class: "form-control" %>
  <%= f.label :image_url, class: "form-label mt-2" %>
  <%= f.text_field :image_url, class: "form-control" %>
  <%= f.label :number_of_guests, class: "form-label mt-2" %>
  <%= f.number_field :number_of_guests, class: "form-control" %>
  <%= f.label :price_per_night, class: "form-label mt-2" %>
  <%= f.number_field :price_per_night, class: "form-control" %>
  <%= f.submit class: 'btn btn-primary mt-3 me-2' %> <%= link_to "Cancel", flats_path, class: "btn btn-danger mt-3" %>
<% end %>
