<div class="container mt-3 mb-3">
  <h2>All our Flats</h2>
  <p>All <%= @flats.count %> flats</p>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card-trip">
        <img src="<%= flat.image_url %>" />
        <div class="flat-info-index">
          <div>
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          </div>
          <div class="d-flex">
            <p class="me-2"><i class="me-1 fas fa-users"></i> <%= flat.number_of_guests %></p>
            <p><i class="me-1 fas fa-euro-sign"></i><%= flat.price_per_night %></p>
          </div>
          <div class="d-flex index-links pt-3 border-top">
            <%= link_to "More info", flat_path(flat), class: 'me-3'%>
            <%= link_to "Edit", edit_flat_path(flat), class: 'yellow-link me-3' %>
            <%= link_to "Remove", flat_path(flat), class: 'red-link me-3', method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
